<style>
  {% if section.settings.custom_font %}
    {{ section.settings.sec_font | font_face: font_display: 'fallback' }}
  {% endif %}
  .shopify-section--collection-list .section-header {
    grid-template-columns: 1fr;
    margin-block-end: var(--spacing-12);
  }
  .shopify-section--collection-list .section-header .prose {
    max-width: 700px;
  }
  #shopify-section-{{ section.id }} collection-list.collection-list_carousel {
      display: grid;
      grid: auto / auto-flow calc(var( --container-inner-width) / {{ section.settings.collections_per_row }} - (var(--slider-gap) / {{ section.settings.collections_per_row }} * {{ section.settings.collections_per_row | minus: 1 }}));
      align-items: start;
      gap: var(--slider-gap);
      display: grid;
  }
  #shopify-section-{{ section.id }} collection-list.collection-list_carousel.slick-initialized.slick-slider {
    display: block;
}
  {%- if section.settings.full_width_slider -%}
    .section.no_padding {
      padding-inline-start: 0px;
      padding-inline-end: 0px;
  }
  {%- endif -%} 
  {%- if section.settings.col_desing == 'stack' -%}
     #shopify-section-{{ section.id }} .collection-list {
    --collection-list-grid: {% if section.settings.col_desing == 'stack' %}none{% else %}auto / auto-flow 73vw{% endif %};
       gap:{{ section.settings.collections_gap }}px;
  }

  @media screen and (min-width: 700px) {
    #shopify-section-{{ section.id }} .collection-list {
      --collection-list-grid: {% if section.settings.col_desing == 'stack' %}auto / repeat(2, minmax(0, 1fr)){% else %}auto / auto-flow 36vw{% endif %};
    }
  }

  @media screen and (min-width: 1000px) {
    #shopify-section-{{ section.id }} .collection-list {
      --collection-list-grid: {% if section.settings.col_desing == 'stack' %}auto / repeat({{ 3 | at_most: section.settings.collections_per_row }}, minmax(0, 1fr)){% else %}auto / auto-flow calc(var(--container-inner-width) / {{ section.settings.collections_per_row }} - (var(--grid-gutter) / 3 * 2)){% endif %};
    }
  }

  @media screen and (min-width: 1400px) {
    #shopify-section-{{ section.id }} .collection-list {
      --collection-list-grid: {% if section.settings.col_desing == 'stack' %}auto / repeat({{ section.settings.collections_per_row }}, minmax(0, 1fr)){% else %}auto / auto-flow calc(var(--container-inner-width) / {{ section.settings.collections_per_row }} - (var(--grid-gutter) / {{ section.settings.collections_per_row }} * {{ section.settings.collections_per_row | minus: 1 }})){% endif %};
    }
  }
  {% endif %}
</style>

