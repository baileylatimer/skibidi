{%- if section.settings.full_width_slider -%}
  {%- capture class -%} no_padding1 {%- endcapture -%} 
{%- endif -%} 
<div {% render 'section-properties', class:class %}>
    {%- assign link_url = section.settings.link_url | default: section.settings.collection.url -%}
    {%- render 'section-header', subheading: section.settings.subheading, pre_font_size: section.settings.font_size_pre, title_font_size: section.settings.font_size_title, heading: section.settings.title, text_alignment:section.settings.text_alignment, heading_color: section.settings.heading_color, heading_gradient: section.settings.heading_gradient, content: section.settings.content, link_text: section.settings.link_text, link_url: link_url -%}   
  <div class="section-stack">
    <div class="{% if section.settings.show_progress_bar %}scrollable-with-controls{% if section.settings.col_desing == 'slider' %} is-scrollable{% endif %}{% else %}floating-controls-container{% endif %}">
      {%- if section.settings.col_desing == 'stack' -%}
      {%- assign scroll_area_id = 'scroll-area-' | append: section.id -%}
      <scroll-carousel selector=".collection-card" id="{{ scroll_area_id }}" class="scroll-area bleed {% if section.blocks.size > section.settings.collections_per_row %}is-scrollable{% endif %}">
        <collection-list class="collection-list">
      {% else %}
        <collection-list class="collection-list_carousel" data-mobile_item="{{ section.settings.mobile_items }}" data-slick="{'slidesToShow': {{ section.settings.collections_per_row }}, 'slidesToScroll': 1, {% if section.settings.autoplay %}'autoplay': true, {% if section.settings.smooth_scroll %}'autoplaySpeed':'0','speed': {{ section.settings.cycle_speed | times: 1000 }},{% else %}'autoplaySpeed': {{ section.settings.cycle_speed | times: 1000 }},{% endif %}{% endif %}{% if section.settings.smooth_scroll %} 'cssEase': 'linear', {% endif %}{% if section.settings.hover_pause %} 'pauseOnHover': true, {% else %} 'pauseOnHover': false,{% endif %}'arrows': false, 'infinite': true} {% if section.settings.slider_gap %}" style="--slider-gap:{{ section.settings.slider_gap  | divided_by: 2 }}px"{% endif %}>
      {% endif %}       
      {%- for block in section.blocks -%}
            {%- assign collection = block.settings.collection -%}
            {%- assign collection_url = block.settings.url | default: collection.url -%}

            <a {% if collection_url != blank %}href="{{ collection_url }}"{% endif %} class="collection-card {% if block.settings.text_position contains 'place-self-end' %}collection-card--reverse-transition{% endif %} shadow" reveal-js>
              <div class="content-over-media group {% if section.settings.rounded_corner %}rounded-sm{% endif %} {{ section.settings.img_ratio }}" {% if block.settings.background_gradient != blank %}style="--content-over-media-gradiant: {{ block.settings.background_gradient }};" {% else %}style="--content-over-media-overlay: {{ block.settings.overlay_color.rgb }} / {{ block.settings.overlay_opacity | divided_by: 100.0 }}"{% endif %}>
                {%- if collection != blank or block.settings.image != blank -%}
                  {%- assign image = block.settings.image | default: collection.featured_image -%}
                  
                  {%- if image != blank -%}
                    {%- capture sizes -%}(max-width: 699px) 73vw, {{ settings.page_width | divided_by: section.settings.collections_per_row }}px{%- endcapture -%}
                    {{- image | image_url: width: image.width | image_tag: loading: 'lazy', sizes: sizes, widths: '200,300,400,500,600,800,1000,1200,1400,1600', class: 'zoom-image' -}}
                  {%- endif -%}

                  <div class="collection-card__content-wrapper text-custom {{ block.settings.text_position }}" style="--text-color: {{ block.settings.text_color.rgb }}">
                    {%- if block.settings.show_arrow -%}
                      {%- if block.settings.text_position contains 'place-self-end' -%}
                        {%- render 'icon' with 'circle-button-right-clipped', width: 40, height: 40 -%}
                      {%- endif -%}
                    {%- endif -%}

                    <div class="collection-card__content prose">

                      {%- if block.settings.pre_image != blank -%}
                      {%- assign image = block.settings.pre_image -%}  
                      {{- image | image_url: width: image.width | image_tag: loading: 'lazy' -}}
                      {%- elsif block.settings.preheading != blank -%}
                        <h6 class="h6" style="--desk-font:{{ block.settings.t_font_size_preheading }}px; --mob-font:{{ block.settings.mobt_font_size_preheading }}px;">
                          {%- render 'styled-text', content: block.settings.preheading -%}
                        </h6>
                      {%- endif -%} 
                      {%- if block.settings.head_image != blank -%}  
                      {%- assign image = block.settings.head_image -%}
                      {%- assign head_image_width = block.settings.head_image_width -%}
                      {%- assign image_style = 'max-width: ' | append: head_image_width | append: '%' -%}  
                      {{- image | image_url: width: image.width | image_tag: loading: 'lazy', style: image_style -}} 
                      {%- elsif block.settings.title != blank -%}
                        <h6 class="h6" style="--desk-font:{{ block.settings.t_font_size_title }}px; --mob-font:{{ block.settings.mbot_font_size_title }}px;">
                          {%- render 'styled-text', content: block.settings.title -%}
                        </h6>
                      {%- endif -%}
                      {%- if block.settings.sub_image != blank -%}
                      {%- assign image = block.settings.sub_image -%}
                      {%- assign sub_image_width = block.settings.sub_image_width -%}
                      {%- assign image_style = 'max-width: ' | append: sub_image_width | append: '%' -%}    
                      {{- image | image_url: width: image.width | image_tag: loading: 'lazy', style: image_style -}}  
                      {%- elsif block.settings.subheading != blank -%}
                        <p class="bold">{{ block.settings.subheading | escape }}</p>
                      {%- endif -%}
                    </div>
                    {%- if block.settings.show_arrow -%}
                    {%- unless block.settings.text_position contains 'place-self-end' -%}
                      {%- render 'icon' with 'circle-button-right-clipped', width: 40, height: 40 -%}
                    {%- endunless -%}
                    {%- endif -%}
                  </div>
                {%- else -%}
                  {%- capture collection_placeholder -%}{% cycle 'collection-1', 'collection-2', 'collection-3' %}{%- endcapture -%}
                  {{- collection_placeholder | placeholder_svg_tag: 'placeholder zoom-image' -}}

                  <div class="collection-card__content-wrapper text-custom {{ block.settings.text_position }}" style="--text-color: {{ block.settings.text_color.rgb }}">
                    {%- if block.settings.show_arrow -%}
                      {%- if block.settings.text_position contains 'place-self-end' -%}
                      {%- render 'icon' with 'circle-button-right-clipped', width: 40, height: 40 -%}
                    {%- endif -%}
                    {%- endif -%}
                    <div class="collection-card__content prose">
                      <p class="{{ block.settings.heading_tag }}">{{- 'general.on_boarding.collection_title' | t -}}</p>
                    </div>
                    {%- if block.settings.show_arrow -%}
                    {%- unless block.settings.text_position contains 'place-self-end' -%}
                      {%- render 'icon' with 'circle-button-right-clipped', width: 40, height: 40 -%}
                    {%- endunless -%}
                    {%- endif -%}  
                  </div>
                {%- endif -%}
              </div>
            </a>
          {%- endfor -%}
        {%- if section.settings.col_desing == 'slider' -%}  
        </collection-list>
        {% else %}
        </collection-list>
        </scroll-carousel>
      {% endif %}
      
      {%- if section.settings.col_desing == 'slider' -%}
        {%- if section.settings.show_progress_bar -%}
          {%- assign default_progress = section.settings.collections_per_row | times: 1.0 | divided_by: section.blocks.size -%}
          <div class="scrollbar">
            <div class="progress" role="progressbar" aria-valuemin="0" aria-valuemax="100">
                <span class="progressbar"></span>
            </div>
            {% comment %}<scroll_bar class="scrollbar__progress" style="--scroll-progress:{{ default_progress }}"><span></span></scroll_bar>{% endcomment %}
              <div aria-controls="{{ observes }}" class="scrollbar__buttons">
                <button class="circle-button ring group owl-prev owl_btn">
                  <span class="sr-only">{{ 'general.accessibility.previous' | t }}</span>
                  <span class="animated-arrow animated-arrow--reverse"></span>
                </button>
          
                <button class="circle-button ring group owl-next owl_btn">
                  <span class="sr-only">{{ 'general.accessibility.next' | t }}</span>
                  <span class="animated-arrow"></span>
                </button>
              </div>
          </div>
        {%- else -%}
          <button class="circle-button circle-button--lg circle-button--fill border group owl-prev owl_btn">
                  <span class="sr-only">{{ 'general.accessibility.previous' | t }}</span>
                  <span class="animated-arrow animated-arrow--reverse"></span>
          </button>          
          <button class="circle-button circle-button--lg circle-button--fill border group owl-next owl_btn">
                  <span class="sr-only">{{ 'general.accessibility.next' | t }}</span>
                  <span class="animated-arrow"></span>
          </button>
        {%- endif -%}
      {%- endif -%}
    </div>
  </div>
</div>
