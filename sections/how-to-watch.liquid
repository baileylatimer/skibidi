{%- render 'section-spacing-collapsing' -%}

<style>
  #shopify-section-{{ section.id }} .how-to-watch-section {
    background-image: url('{{ section.settings.background_image | image_url }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: 2em 0;
    position: relative;
  }

  .how-to-watch-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 150px;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.8), transparent);
    z-index: 1;
  }

  .how-to-watch-container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
    position: relative;
    z-index: 2;
  }

  .how-to-watch-title {
    text-align: center;
    margin-bottom: var(--spacing-xl);
    color: var(--color-light);
  }

  .how-to-watch-content {
    background-color: var(--color-dark);
    padding: var(--spacing-xl);
    border-radius: 0;
  }

  .how-to-watch-steps {
    display: grid;
    grid-template-columns: 1fr auto 1fr auto 1fr;
    gap: var(--spacing-lg);
    align-items: center;
  }

  .how-to-watch-step {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
  }

  .how-to-watch-step__image {
    width: 120px;
    height: 120px;
    object-fit: cover;
    border-radius: var(--border-radius-md);
    flex-shrink: 0;
  }

  .how-to-watch-step__content {
    flex: 1;
  }

  .how-to-watch-step__title {
    font-family: var(--font-header) !important;
    font-weight: 800 !important;
    font-size: 32px;
    line-height: 1.2;
    margin-bottom: var(--spacing-sm);
  }

  @media screen and (min-width: 768px) {
    .how-to-watch-step__title {
      font-size: 45px;
    }
  }

  .how-to-watch-step__title-row-1 {
    color: var(--color-light);
    display: block;
  }

  .how-to-watch-step__title-row-2 {
    color: var(--color-primary);
    display: block;
  }

  .how-to-watch-step__description {
    font-family: var(--font-body) !important;
    font-weight: 400 !important;
    color: var(--color-subtle);
    font-size: 0.875rem;
    line-height: 1.5;
    margin: 0;
  }

  .how-to-watch-arrow {
    color: var(--color-light);
    font-size: 1.5rem;
    font-weight: bold;
  }

  /* Mobile Layout */
  @media screen and (max-width: 767px) {
    .how-to-watch-steps {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }

    .how-to-watch-step {
      flex-direction: column;
      text-align: center;
    }

    .how-to-watch-step__image {
      width: 100px;
      height: 100px;
    }

    .how-to-watch-arrow {
      display: none;
    }

    .how-to-watch-content {
      padding: var(--spacing-lg);
    }
  }
</style>

<div class="how-to-watch-section">
  <div class="how-to-watch-container">
    
    {%- if section.settings.title != blank -%}
      <h2 class="how-to-watch-title">{{ section.settings.title }}</h2>
    {%- endif -%}

    <div class="how-to-watch-content">
      <div class="how-to-watch-steps">
        
        <!-- Step 1 -->
        <div class="how-to-watch-step">
          {%- if section.settings.step_1_image != blank -%}
            <img src="{{ section.settings.step_1_image | image_url }}" 
                 alt="{{ section.settings.step_1_title_row_1 }} {{ section.settings.step_1_title_row_2 }}"
                 class="how-to-watch-step__image"
                 width="120"
                 height="120">
          {%- endif -%}
          <div class="how-to-watch-step__content">
            {%- if section.settings.step_1_title_row_1 != blank or section.settings.step_1_title_row_2 != blank -%}
              <h3 class="how-to-watch-step__title">
                {%- if section.settings.step_1_title_row_1 != blank -%}
                  <span class="how-to-watch-step__title-row-1">{{ section.settings.step_1_title_row_1 }}</span>
                {%- endif -%}
                {%- if section.settings.step_1_title_row_2 != blank -%}
                  <span class="how-to-watch-step__title-row-2">{{ section.settings.step_1_title_row_2 }}</span>
                {%- endif -%}
              </h3>
            {%- endif -%}
            {%- if section.settings.step_1_description != blank -%}
              <p class="how-to-watch-step__description">{{ section.settings.step_1_description }}</p>
            {%- endif -%}
          </div>
        </div>

        <!-- Arrow 1 -->
        <div class="how-to-watch-arrow">→</div>

        <!-- Step 2 -->
        <div class="how-to-watch-step">
          {%- if section.settings.step_2_image != blank -%}
            <img src="{{ section.settings.step_2_image | image_url }}" 
                 alt="{{ section.settings.step_2_title_row_1 }} {{ section.settings.step_2_title_row_2 }}"
                 class="how-to-watch-step__image"
                 width="120"
                 height="120">
          {%- endif -%}
          <div class="how-to-watch-step__content">
            {%- if section.settings.step_2_title_row_1 != blank or section.settings.step_2_title_row_2 != blank -%}
              <h3 class="how-to-watch-step__title">
                {%- if section.settings.step_2_title_row_1 != blank -%}
                  <span class="how-to-watch-step__title-row-1">{{ section.settings.step_2_title_row_1 }}</span>
                {%- endif -%}
                {%- if section.settings.step_2_title_row_2 != blank -%}
                  <span class="how-to-watch-step__title-row-2">{{ section.settings.step_2_title_row_2 }}</span>
                {%- endif -%}
              </h3>
            {%- endif -%}
            {%- if section.settings.step_2_description != blank -%}
              <p class="how-to-watch-step__description">{{ section.settings.step_2_description }}</p>
            {%- endif -%}
          </div>
        </div>

        <!-- Arrow 2 -->
        <div class="how-to-watch-arrow">→</div>

        <!-- Step 3 -->
        <div class="how-to-watch-step">
          {%- if section.settings.step_3_image != blank -%}
            <img src="{{ section.settings.step_3_image | image_url }}" 
                 alt="{{ section.settings.step_3_title_row_1 }} {{ section.settings.step_3_title_row_2 }}"
                 class="how-to-watch-step__image"
                 width="120"
                 height="120">
          {%- endif -%}
          <div class="how-to-watch-step__content">
            {%- if section.settings.step_3_title_row_1 != blank or section.settings.step_3_title_row_2 != blank -%}
              <h3 class="how-to-watch-step__title">
                {%- if section.settings.step_3_title_row_1 != blank -%}
                  <span class="how-to-watch-step__title-row-1">{{ section.settings.step_3_title_row_1 }}</span>
                {%- endif -%}
                {%- if section.settings.step_3_title_row_2 != blank -%}
                  <span class="how-to-watch-step__title-row-2">{{ section.settings.step_3_title_row_2 }}</span>
                {%- endif -%}
              </h3>
            {%- endif -%}
            {%- if section.settings.step_3_description != blank -%}
              <p class="how-to-watch-step__description">{{ section.settings.step_3_description }}</p>
            {%- endif -%}
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

