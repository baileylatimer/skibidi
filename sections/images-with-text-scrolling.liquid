{%- render 'section-spacing-collapsing' -%}
<style>
  {{ section.settings.sec_font | font_face }} 
  #shopify-section-{{ section.id }} {
    font-family: {{ section.settings.sec_font.family }},{{ section.settings.sec_font.fallback_families }};
    --images-scrolling-block-count: {{ section.blocks.size }};
    --images-scrolling-image-ratio: {{ section.blocks.first.settings.image.aspect_ratio | default: 1 }};
  }

  @media screen and (max-width: 740px) {
    #shopify-section-{{ section.id }} {
      --images-scrolling-grid: {% if section.settings.stack_on_mobile %}none{% else %}auto / auto-flow 73vw{% endif %};
    }
  }

  @media screen and (min-width: 741px) {
    #shopify-section-{{ section.id }} {
      --images-scrolling-grid-template-columns: {% if section.settings.image_position == 'start' %}[media] minmax(0, 1fr) [content] minmax(0, 0.8fr){% else %}[content] minmax(0, 0.8fr) [media] minmax(0, 1fr){% endif %};
    }
  }
</style>

<div {% render 'section-properties', narrow: true %}>
  {%- comment -%}
  ----------------------------------------------------------------------------------------------------------------------
  MOBILE VARIATION
  ----------------------------------------------------------------------------------------------------------------------
  {%- endcomment -%}
  <images-with-text-scrolling class="images-scrolling-mobile scroll-area bleed sm:unbleed">
    {%- for block in section.blocks -%}
      <div class="images-scrolling-mobile__item snap-start" {{ block.shopify_attributes }}>
        {%- if block.settings.image != blank -%}
          {{- block.settings.image | image_url: width: block.settings.image.width | image_tag: loading: 'lazy', sizes: '(max-width: 740px) 100vw, 650px', widths: '200,300,400,600,800,1000,1200,1400,1600', class: 'rounded-sm' -}}
        {%- else -%}
          {%- capture image_placeholder -%}product-{%- cycle '1', '2', '3', '4' -%}{%- endcapture -%}
          {{- image_placeholder | placeholder_svg_tag: 'placeholder' -}}
        {%- endif -%}

        <div class="images-scrolling__content">
          {%- if section.settings.show_counter -%}
            <span class="images-scrolling__counter bold">{{ forloop.index | prepend: '00' | slice: -2, 2 }}</span>
          {%- endif -%}

          <div class="prose" style="--images-scrolling-item-icon-width: {{ block.settings.icon_width }}px">
            {%- if block.settings.custom_icon != blank -%}
              {%- capture sizes -%}{{ block.settings.icon_width }}px{%- endcapture -%}
              {%- capture widths -%}{{ block.settings.icon_width }}, {{ block.settings.icon_width | times: 2 | at_most: block.settings.custom_icon.width }}{%- endcapture -%}
              {{- block.settings.custom_icon | image_url: width: block.settings.custom_icon.width | image_tag: loading: 'lazy', sizes: sizes, widths: widths, class: 'images-scrolling__icon' -}}
            {%- elsif block.settings.icon != 'none' -%}
              {%- render 'icon' with block.settings.icon, width: block.settings.icon_width, height: block.settings.icon_width, class: 'images-scrolling__icon' -%}
            {%- endif -%}
            {%- if block.settings.pre_heading != blank -%}
              <p class="h1" {% if settings.heading_apparition != 'none' %}reveal-on-scroll="true"{% endif %}>
                {%- render 'styled-text', content: block.settings.pre_heading, font_size: block.settings.font_size_pre, apparition_effect: true -%}
              </p>
            {%- endif -%}
            {%- if block.settings.title != blank -%}
              <p class="h1" {% if settings.heading_apparition != 'none' %}reveal-on-scroll="true"{% endif %}>
                {%- render 'styled-text', content: block.settings.title, text_color: section.settings.heading_color, gradient: section.settings.heading_gradient, font_size: block.settings.font_size_title, apparition_effect: true -%}
              </p>
            {%- endif -%}
            {{- block.settings.content -}}
          </div>
        </div>
      </div>
    {%- endfor -%}
  </images-with-text-scrolling>

  {%- comment -%}
  ----------------------------------------------------------------------------------------------------------------------
  DESKTOP VARIATION
  ----------------------------------------------------------------------------------------------------------------------
  {%- endcomment -%}
  <images-with-text-scrolling scrolling-experience="{{ section.settings.desktop_image_effect }}" class="images-scrolling-desktop">
    <div class="images-scrolling-desktop__content-list">
      {%- for block in section.blocks -%}
        <div class="images-scrolling__content {% unless forloop.first %}opacity-0{% endunless %}">
          {%- if section.settings.show_counter -%}
            <span class="images-scrolling__counter bold">{{ forloop.index | prepend: '00' | slice: -2, 2 }}</span>
          {%- endif -%}

          <div class="prose" style="--images-scrolling-item-icon-width: {{ block.settings.icon_width }}px">
            {%- if block.settings.custom_icon != blank -%}
              {%- capture sizes -%}{{ block.settings.icon_width }}px{%- endcapture -%}
              {%- capture widths -%}{{ block.settings.icon_width }}, {{ block.settings.icon_width | times: 2 | at_most: block.settings.custom_icon.width }}{%- endcapture -%}
              {{- block.settings.custom_icon | image_url: width: block.settings.custom_icon.width | image_tag: loading: 'lazy', sizes: sizes, widths: widths, class: 'images-scrolling__icon' -}}
            {%- elsif block.settings.icon != 'none' -%}
              {%- render 'icon' with block.settings.icon, width: block.settings.icon_width, height: block.settings.icon_width, class: 'images-scrolling__icon' -%}
            {%- endif -%}
            {%- if block.settings.pre_heading != blank -%}
              <p class="h1" {% if settings.heading_apparition != 'none' %}reveal-on-scroll="true"{% endif %}>
                {%- render 'styled-text', content: block.settings.pre_heading, font_size: block.settings.font_size_pre, apparition_effect: true -%}
              </p>
            {%- endif -%}
            {%- if block.settings.title != blank -%}
              <p class="h1" {% if settings.heading_apparition != 'none' %}reveal-on-scroll="true"{% endif %}>
                {%- render 'styled-text', content: block.settings.title, font_size: block.settings.font_size_title, text_color: section.settings.heading_color, gradient: section.settings.heading_gradient, apparition_effect: true -%}
              </p>
            {%- endif -%}

            {{- block.settings.content -}}
              {%- if block.settings.button_text != blank -%}
                {%- render 'button', href: block.settings.button_link, content: block.settings.button_text, size: block.settings.button_size, background: block.settings.button_background, text_color: block.settings.button_text_color -%}
              {%- endif -%}
              {%- if block.settings.button_link2 != blank -%}
                {%- render 'button', href: block.settings.button_link2, content: block.settings.button_text2, size: block.settings.button_size, background: block.settings.button_background, text_color: block.settings.button_text_color -%}
              {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>

    <div class="images-scrolling-desktop__media-wrapper">
      {%- for block in section.blocks -%}
        {%- if block.settings.show_video -%}
          {%- capture class -%}content-over-media {% if block.settings.video_size == 'auto' %}aspect-video{% else %}content-over-media--{{ block.settings.video_size }}{% endif %} {% if block.settings.full_width %}full-bleed{% else %}shadow-block {% unless block.settings.video %} %}rounded-lg {% endunless %}{% endif %}{%- endcapture -%}
          <div {% render 'surface', class: class %}>
          {%- capture poster -%}
            {%- assign poster_image = block.settings.poster | default: block.settings.video.preview_image -%}
      
            {%- if block.settings.autoplay == false and poster_image != blank -%}
              {%- capture sizes -%}{% if block.settings.full_width %}100vw{% else %}(max-width: 740px) calc(100vw - 40px), (max-width: 999px) calc(100vw - 64px), min({{ settings.page_width }}px, 100vw - 96px){% endif %}{%- endcapture -%}
              {{- poster_image | image_url: width: poster_image.width | image_tag: loading: 'lazy', sizes: sizes, widths: '200,300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200' -}}
            {%- endif -%}
          {%- endcapture -%}
        
          {%- if block.settings.video -%}
            <video-media {% if block.settings.autoplay %}autoplay{% endif %}>
              {%- if block.settings.autoplay -%}
                {%- assign show_controls = false -%}
              {%- else -%}
                {%- assign show_controls = true -%}
              {%- endif -%}
      
              {{- block.settings.video | video_tag: playsinline: true, preload: 'metadata', muted: block.settings.autoplay, loop: block.settings.autoplay, controls: show_controls, image_size: '800x' -}}
              {{- poster -}}
            </video-media>
          {%- else -%}
            <video-media host="{{ block.settings.external_video_url.type }}" {% if block.settings.autoplay %}autoplay class="pointer-events-none"{% endif %}>
              {{- poster -}}
      
              <template>
                {%- if block.settings.external_video_url.type == 'youtube' -%}
                  <iframe src="https://www.youtube.com/embed/{{ block.settings.external_video_url.id }}?playsinline=1&{% if block.settings.autoplay %}autoplay=1&controls=0&mute=1&loop=1&{% endif %}playlist={{ section.settings.external_video_url.id }}&enablejsapi=1&rel=0&modestbranding=1&origin={{ 'https://' | append: request.host | url_encode }}" allow="autoplay; encrypted-media" allowfullscreen="allowfullscreen"></iframe>
                {%- elsif block.settings.external_video_url.type == 'vimeo' -%}
                  <iframe src="https://player.vimeo.com/video/{{ block.settings.external_video_url.id }}?autopause=1&{% if block.settings.autoplay %}background=1&autoplay=1&loop=1&muted=1&{% endif %}transparent=0&responsive=1&portrait=0&title=0&byline=0&color={{ settings.text_color | remove_first: '#' }}" allow="autoplay; encrypted-media;" allowfullscreen="allowfullscreen"></iframe>
                {%- endif -%}
              </template>
            </video-media>
          {%- endif -%}
          {% if block.settings.show_pause %}
          <div class="place-self-end push_down_mob">
              <button class="video-pause-button" type="button" {{ block.shopify_attributes }}>
                        <span class="sr-only">{{ 'general.accessibility.play_video' | t }}</span>
                        {%- render 'icon' with 'pause', width: 35, height: 35 -%}
                        {%- render 'icon' with 'play', width: 35, height: 35 -%}
              </button>
            <button class="mute_button" type="button" {{ block.shopify_attributes }}>
                        <span class="sr-only">{{ 'general.accessibility.play_video' | t }}</span>
                        {%- render 'icon' with 'mute', width: 35, height: 35 -%}
                        {%- render 'icon' with 'unmute', width: 35, height: 35 -%}
              </button>
          </div>
          {%- endif -%}
          </div>
          {%- else -%} 
        {%- if block.settings.image != blank -%}
          {{- block.settings.image | image_url: width: block.settings.image.width | image_tag: loading: 'lazy', sizes: '(max-width: 740px) 100vw, 650px', widths: '200,300,400,600,800,1000,1200,1400,1600', class: 'rounded-sm' -}}
        {%- else -%}
          {%- capture image_placeholder -%}product-{%- cycle '1', '2', '3', '4' -%}{%- endcapture -%}
          {{- image_placeholder | placeholder_svg_tag: 'placeholder' -}}
        {%- endif -%}
        {%- endif -%}  
      {%- endfor -%}
    </div>
  </images-with-text-scrolling>
</div>

