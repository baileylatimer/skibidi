{%- comment -%}
  ------------------------------------------------------------------------------------------------------------------------
  INFINITE SCROLL CARDS SECTION
  ------------------------------------------------------------------------------------------------------------------------
{%- endcomment -%}

<style>
  #shopify-section-{{ section.id }} {
    --scroll-speed: {{ section.settings.scroll_speed }}s;
    --scroll-speed-row2: {{ section.settings.row2_scroll_speed | default: section.settings.scroll_speed }}s;
    --card-gap: {{ section.settings.card_gap }}px;
    --row-gap: {{ section.settings.row_gap | default: 20 }}px;
    --section-padding: {{ section.settings.section_padding }}px;
    background: {{ section.settings.section_background }};
    {% if section.settings.section_background_gradient != blank %}
      background: {{ section.settings.section_background_gradient }};
    {% endif %}
    padding: var(--section-padding) 0;
    overflow: hidden;
  }

  .infinite-scroll-section {
    width: 100%;
    overflow: hidden;
    position: relative;
  }

  .scroll-container {
    overflow: hidden;
    width: 100%;
  }

  .scroll-content {
    display: flex;
    gap: var(--card-gap);
    animation: scrollHorizontal var(--scroll-speed) linear infinite;
    will-change: transform;
  }

  .scroll-content:hover {
    animation-play-state: paused;
  }

  @keyframes scrollHorizontal {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .scroll-card {
    flex-shrink: 0;
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    cursor: pointer;
    transition: transform var(--transition-medium);
    background-color: #333; /* Fallback background for cards without images */
  }

  .scroll-card:hover {
    transform: scale(1.02);
    z-index: 10;
  }

  .scroll-card--small {
    width: 300px;
    height: 300px;
  }

  .scroll-card--medium {
    width: 300px;
    height: 450px;
  }

  .scroll-card--large {
    width: 450px;
    height: 450px;
  }

  @media screen and (max-width: 768px) {
    .scroll-card--small,
    .scroll-card--medium,
    .scroll-card--large {
      width: 250px;
      height: 300px;
    }
    
    #shopify-section-{{ section.id }} {
      --scroll-speed: {{ section.settings.scroll_speed | times: 1.5 }}s;
    }
  }

  .scroll-card__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      transparent 40%,
      rgba(0, 0, 0, 0.3) 70%,
      var(--card-gradient-color, rgba(0, 0, 0, 0.8)) 100%
    );
    z-index: 1;
  }

  .scroll-card__content {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 20px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    z-index: 2;
    color: var(--card-text-color, #ffffff);
  }

  .scroll-card__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .scroll-card__content-type {
    font-family: "Blender Pro", sans-serif;
    font-weight: 700;
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 1px;
    opacity: 0.8;
    margin-bottom: 8px;
  }

  .scroll-card__logo {
    max-width: 60px;
    max-height: 40px;
    object-fit: contain;
  }

  .scroll-card__footer {
    margin-top: auto;
  }

  .scroll-card__subtitle {
    font-family: "Blender Pro", sans-serif;
    font-weight: 400;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    opacity: 0.9;
    margin-bottom: 4px;
  }

  .scroll-card__title {
    font-family: "Blender Pro", sans-serif;
    font-weight: 700;
    font-size: 18px;
    line-height: 1.2;
    margin: 0;
  }

  .scroll-card--medium .scroll-card__title,
  .scroll-card--large .scroll-card__title {
    font-size: 22px;
  }

  .scroll-card__link {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 3;
    text-decoration: none;
  }

  /* External link icon */
  .scroll-card__external-icon {
    position: absolute;
    top: 16px;
    right: 16px;
    width: 16px;
    height: 16px;
    opacity: 0.7;
    transition: opacity var(--transition-fast);
  }

  .scroll-card:hover .scroll-card__external-icon {
    opacity: 1;
  }

  /* Two-row specific styles */
  .infinite-scroll-section {
    display: flex;
    flex-direction: column;
    gap: var(--row-gap);
  }

  .scroll-container--row-1 {
    display: flex;
    align-items: flex-end;
  }

  .scroll-container--row-2 {
    display: flex;
    align-items: flex-start;
  }

  .scroll-container--row-1 .scroll-content {
    animation: scrollHorizontal var(--scroll-speed) linear infinite;
  }

  .scroll-container--row-2 .scroll-content {
    animation: {% if section.settings.row2_direction == 'opposite' %}scrollHorizontalReverse{% else %}scrollHorizontal{% endif %} var(--scroll-speed-row2) linear infinite;
  }

  @keyframes scrollHorizontalReverse {
    0% {
      transform: translateX(-50%);
    }
    100% {
      transform: translateX(0);
    }
  }

  /* Mobile adjustments for two rows */
  @media screen and (max-width: 768px) {
    .infinite-scroll-section {
      gap: calc(var(--row-gap) / 2);
    }
    
    .scroll-container--row-2 .scroll-content {
      animation-duration: calc(var(--scroll-speed-row2) * 1.5);
    }
  }
</style>

<div class="infinite-scroll-section">
  {%- if section.settings.number_of_rows == "2" -%}
    {%- comment -%} Two Row Layout {%- endcomment -%}
    
    {%- comment -%} Row 1 {%- endcomment -%}
    <div class="scroll-container scroll-container--row-1">
      <div class="scroll-content scroll-content--row-1">
        {%- comment -%} Original set {%- endcomment -%}
        {%- for block in section.blocks -%}
          {%- if block.settings.row_assignment == '1' -%}
            {%- render 'infinite-scroll-card', block: block -%}
          {%- elsif block.settings.row_assignment == 'auto' -%}
            {%- assign index = forloop.index0 -%}
            {%- assign remainder = index | modulo: 2 -%}
            {%- if remainder == 0 -%}
              {%- render 'infinite-scroll-card', block: block -%}
            {%- endif -%}
          {%- endif -%}
        {%- endfor -%}
        {%- comment -%} Duplicate set {%- endcomment -%}
        {%- for block in section.blocks -%}
          {%- if block.settings.row_assignment == '1' -%}
            {%- render 'infinite-scroll-card', block: block -%}
          {%- elsif block.settings.row_assignment == 'auto' -%}
            {%- assign index = forloop.index0 -%}
            {%- assign remainder = index | modulo: 2 -%}
            {%- if remainder == 0 -%}
              {%- render 'infinite-scroll-card', block: block -%}
            {%- endif -%}
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>

    {%- comment -%} Row 2 {%- endcomment -%}
    <div class="scroll-container scroll-container--row-2">
      <div class="scroll-content scroll-content--row-2">
        {%- comment -%} Original set {%- endcomment -%}
        {%- for block in section.blocks -%}
          {%- if block.settings.row_assignment == '2' -%}
            {%- render 'infinite-scroll-card', block: block -%}
          {%- elsif block.settings.row_assignment == 'auto' -%}
            {%- assign index = forloop.index0 -%}
            {%- assign remainder = index | modulo: 2 -%}
            {%- if remainder == 1 -%}
              {%- render 'infinite-scroll-card', block: block -%}
            {%- endif -%}
          {%- endif -%}
        {%- endfor -%}
        {%- comment -%} Duplicate set {%- endcomment -%}
        {%- for block in section.blocks -%}
          {%- if block.settings.row_assignment == '2' -%}
            {%- render 'infinite-scroll-card', block: block -%}
          {%- elsif block.settings.row_assignment == 'auto' -%}
            {%- assign index = forloop.index0 -%}
            {%- assign remainder = index | modulo: 2 -%}
            {%- if remainder == 1 -%}
              {%- render 'infinite-scroll-card', block: block -%}
            {%- endif -%}
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  {%- else -%}
    {%- comment -%} Single Row Layout {%- endcomment -%}
    <div class="scroll-container">
      <div class="scroll-content">
        {%- comment -%} Original set of cards {%- endcomment -%}
        {%- for block in section.blocks -%}
          {%- render 'infinite-scroll-card', block: block -%}
        {%- endfor -%}
        
        {%- comment -%} Duplicate set for seamless loop {%- endcomment -%}
        {%- for block in section.blocks -%}
          {%- render 'infinite-scroll-card', block: block -%}
        {%- endfor -%}
      </div>
    </div>
  {%- endif -%}
</div>

{%- comment -%} Ensure minimum number of cards for smooth scrolling {%- endcomment -%}
{%- if section.blocks.size < 5 -%}
  <script>
    console.warn('Infinite Scroll Cards: For optimal performance, add at least 5 cards to ensure smooth scrolling.');
  </script>
{%- endif -%}

