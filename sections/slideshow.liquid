{%- comment -%}
  ------------------------------------------------------------------------------------------------------------------------
  CSS
  ------------------------------------------------------------------------------------------------------------------------
{%- endcomment -%}
<style>
  {%- if section.settings.controls_type == 'filled_arrows' -%}
    {%- assign controls_background = section.blocks.first.settings.button_background -%}
    {%- assign controls_color = section.blocks.first.settings.button_text_color -%}
  {%- else -%}
    {%- assign controls_color = section.blocks.first.settings.text_color -%}
  {%- endif -%}

  #shopify-section-{{ section.id }} {
    --slideshow-background: {{ section.blocks.first.settings.background_gradient | default: section.blocks.first.settings.background | default: section.settings.background_gradient | default: section.settings.background }};
    --slideshow-controls-background: {{ controls_background.rgb }};
    --slideshow-controls-color: {{ controls_color.rgb }};

    {%- if section.settings.allow_transparent_header -%}
      margin-block-start: calc(-1 * var(--header-height) * var(--section-is-first));
    {%- endif -%}
  }

  {%- for block in section.blocks -%}
    {% if block.settings.custom_font %}
    {{ block.settings.sec_font | font_face: font_display: 'fallback' }}
    {% endif %}
    #block-{{ block.id }} {
      {% if block.settings.custom_font %}
      font-family:{{ block.settings.sec_font.family }};
      {% endif %}
      {%- if section.settings.controls_type == 'filled_arrows' -%}
        {%- assign controls_background = block.settings.button_background -%}
        {%- assign controls_color = block.settings.button_text_color -%}
      {%- else -%}
        {%- assign controls_color = block.settings.text_color -%}
      {%- endif -%}

      --slideshow-slide-background: {{ block.settings.background_gradient | default: block.settings.background | default: section.settings.background_gradient | default: section.settings.background }};
      --slideshow-slide-controls-background: {{ controls_background.rgb }};
      --slideshow-slide-controls-color: {{ controls_color.rgb }};
    }
  {%- endfor -%}
</style>

{%- comment -%}
  ------------------------------------------------------------------------------------------------------------------------
  LIQUID
  ------------------------------------------------------------------------------------------------------------------------
{%- endcomment -%}

{%- assign slideshow_id = 'slideshow-' | append: section.id -%}

<x-slideshow
  class="slideshow {% unless section.settings.full_width %}slideshow--boxed{% endunless %} {% if section.blocks.size > 1 %}slideshow--multiple-slides{% endif %}"
  {% if section.settings.allow_transparent_header %}
    allow-transparent-header
  {% endif %}
>
  {%- unless section.settings.full_width -%}
    <span class="slideshow__slide-background"></span>
  {%- endunless -%}

  <slideshow-carousel
    id="{{ slideshow_id }}"
    class="slideshow__carousel"
    reveal-on-scroll="true"
    selector=".slideshow__slide"
    transition="{{ section.settings.transition_type }}"
    {% if section.settings.autoplay %}
      autoplay="{{ section.settings.cycle_speed }}"
    {% endif %}
    role="region"
  >
    {%- comment -%}
      {%- unless section.blocks.size == 1 or section.settings.controls_type contains 'arrows' -%}
        <custom-cursor class="slideshow__cursor circle-button circle-button--lg circle-button--fill" aria-hidden="true">
          {%- render 'icon' with 'chevron-right' -%}

          <svg class="slideshow__cursor-ring" viewBox="-28 -28 56 56" width="56" height="56" fill="none" stroke="currentColor" stroke-width="2">
            <circle r="27" stroke-dasharray="158.33626974092556" stroke-dashoffset="158.33626974092556px"></circle>
          </svg>
        </custom-cursor>
      {%- endunless -%}
    {%- endcomment -%}

    {%- for block in section.blocks -%}
      {%- capture slide -%}
        <div class="content-over-media content-over-media--{{ section.settings.image_size }} {% unless section.settings.full_width %}rounded{% endunless %}" data-head_txt_color="{{ block.settings.head_text_color }}" style="--content-over-media-content-max-width: {{ block.settings.content_max_width }}px; {%- if block.settings.slide_background_gradient != blank -%}--content-over-media-gradiant: {{ block.settings.slide_background_gradient }} {%- else -%}--content-over-media-overlay: {{ block.settings.overlay_color.rgb }} / {{ block.settings.overlay_opacity | divided_by: 100.0 }}{%- endif -%}">
          {%- comment -%}---------------- MEDIA ----------------{%- endcomment -%}
          {%- capture sizes -%}{% if section.settings.full_width %}100vw{% else %}min({{ settings.page_width }}px, 100vw){% endif %}{%- endcapture -%}
          {%- if block.settings.show_video -%}
          {%- capture poster -%}
            {%- assign poster_image = block.settings.poster | default: block.settings.video.preview_image -%}
      
            {%- if block.settings.autoplay == false and poster_image != blank -%}
              {%- capture sizes -%}{% if block.settings.full_width %}100vw{% else %}(max-width: 740px) calc(100vw - 40px), (max-width: 999px) calc(100vw - 64px), min({{ settings.page_width }}px, 100vw - 96px){% endif %}{%- endcapture -%}
              {{- poster_image | image_url: width: poster_image.width | image_tag: loading: 'lazy', sizes: sizes, widths: '200,300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200' -}}
            {%- endif -%}
          {%- endcapture -%}
      
          {%- if block.settings.video -%}
            <video-media {% if block.settings.mob_video != blank -%} class="desk_video"{% endif %} {% if block.settings.autoplay %}autoplay{% endif %}>
              {%- if block.settings.autoplay -%}
                {%- assign show_controls = false -%}
              {%- else -%}
                {%- assign show_controls = true -%}
              {%- endif -%}
      
              {{- block.settings.video | video_tag: playsinline: true, preload: 'metadata', muted: block.settings.autoplay, loop: block.settings.autoplay, controls: show_controls, image_size: '800x' -}}
              {{- poster -}}
            </video-media>
          {%- else -%}
            <video-media {% if block.settings.mob_video != blank -%} class="desk_video"{% endif %} host="{{ block.settings.external_video_url.type }}" {% if block.settings.autoplay %}autoplay class="pointer-events-none"{% endif %}>
              {{- poster -}}
      
              <template>
                {%- if block.settings.external_video_url.type == 'youtube' -%}
                  <iframe src="https://www.youtube.com/embed/{{ block.settings.external_video_url.id }}?playsinline=1&{% if block.settings.autoplay %}autoplay=1&controls=0&mute=1&loop=1&{% endif %}playlist={{ section.settings.external_video_url.id }}&enablejsapi=1&rel=0&modestbranding=1&origin={{ 'https://' | append: request.host | url_encode }}" allow="autoplay; encrypted-media" allowfullscreen="allowfullscreen"></iframe>
                {%- elsif block.settings.external_video_url.type == 'vimeo' -%}
                  <iframe src="https://player.vimeo.com/video/{{ block.settings.external_video_url.id }}?autopause=1&{% if block.settings.autoplay %}background=1&autoplay=1&loop=1&muted=1&{% endif %}transparent=0&responsive=1&portrait=0&title=0&byline=0&color={{ settings.text_color | remove_first: '#' }}" allow="autoplay; encrypted-media;" allowfullscreen="allowfullscreen"></iframe>
                {%- endif -%}
              </template>
            </video-media>
          {%- endif -%}
          {%- if block.settings.mob_video != blank -%}
            <video-media {% if block.settings.mob_video != blank -%}class="mob_video"{% endif %} {% if block.settings.autoplay %}autoplay{% endif %}>
              {%- if block.settings.autoplay -%}
                {%- assign show_controls = false -%}
              {%- else -%}
                {%- assign show_controls = true -%}
              {%- endif -%}
      
              {{- block.settings.mob_video | video_tag: playsinline: true, preload: 'metadata', muted: block.settings.autoplay, loop: block.settings.autoplay, controls: show_controls, image_size: '800x' -}}
              {{- poster -}}
            </video-media>         
          {%- endif -%}          
          {%- else -%}
          {%- if block.settings.image != blank -%}
            {%- capture loading_strategy -%}{% if forloop.first %}eager{% else %}lazy{% endif %}{%- endcapture -%}
            {%- capture fetch_priority -%}{% if forloop.first %}high{% else %}low{% endif %}{%- endcapture -%}

            {%- if block.settings.mobile_image == blank -%}
              {{- block.settings.image | image_url: width: block.settings.image.width | image_tag: loading: loading_strategy, fetchpriority: fetch_priority, sizes: sizes, widths: '200,300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200' -}}
            {%- else -%}
              {{- block.settings.image | image_url: width: block.settings.image.width | image_tag: loading: loading_strategy, fetchpriority: fetch_priority, sizes: sizes, widths: '200,300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200', class: 'hidden sm:block' -}}
              {{- block.settings.mobile_image | image_url: width: block.settings.mobile_image.width | image_tag: loading: loading_strategy, fetchpriority: fetch_priority, sizes: sizes, widths: '200,300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200', class: 'sm:hidden' -}}
            {%- endif -%}
          {%- else -%}
            {% comment %}{%- capture placeholder_image -%}{% cycle 'placeholder': 'lifestyle-1', 'lifestyle-2' %}{%- endcapture -%}
            {{- placeholder_image | placeholder_svg_tag: 'placeholder' | replace: '<svg', '<svg preserveAspectRatio="xMinYMin slice"' -}}{% endcomment %}
          {%- endif -%}

          
          {%- endif -%}
          {%- comment -%}---------------- CONTENT ----------------{%- endcomment -%}
          {%- if block.settings.show_pause != blank -%}
            {%- unless block.settings.fdesktop_text_position == 'place-self-end text-end' and block.settings.featured_product != blank -%}
            <div class="place-self-end push_down_mob control_div">
              <button class="video-pause-button" type="button" {{ block.shopify_attributes }}>
                        <span class="sr-only">{{ 'general.accessibility.play_video' | t }}</span>
                        {%- render 'icon' with 'pause', width: 35, height: 35 -%}
                        {%- render 'icon' with 'play', width: 35, height: 35 -%}
              </button>
            <button class="mute_button" type="button" {{ block.shopify_attributes }}>
                        <span class="sr-only">{{ 'general.accessibility.play_video' | t }}</span>
                        {%- render 'icon' with 'mute', width: 35, height: 35 -%}
                        {%- render 'icon' with 'unmute', width: 35, height: 35 -%}
              </button>
            </div>
            {%- endunless -%}
          {%- endif -%}         
          {%- if block.settings.featured_product != blank -%}
            
            {%- capture content_class -%}{{ block.settings.fdesktop_text_position }} cus_flex push_down_mob control_div{%- endcapture -%}
            {%- if block.settings.fdesktop_text_position == 'place-self-end text-end' -%}
               <div {% render 'surface', class: content_class, text_color: block.settings.ftext_color %}>
              {%- if block.settings.show_pause != blank -%}
                  <button class="video-pause-button" type="button" {{ block.shopify_attributes }}>
                            <span class="sr-only">{{ 'general.accessibility.play_video' | t }}</span>
                            {%- render 'icon' with 'pause', width: 35, height: 35 -%}
                            {%- render 'icon' with 'play', width: 35, height: 35 -%}
                  </button>
                <button class="mute_button" type="button" {{ block.shopify_attributes }}>
                            <span class="sr-only">{{ 'general.accessibility.play_video' | t }}</span>
                            {%- render 'icon' with 'mute', width: 35, height: 35 -%}
                            {%- render 'icon' with 'unmute', width: 35, height: 35 -%}
                  </button>
              {%- endif -%}
              <div class="hidden md:block">
              <div class="collection-featured-product ">
                {%- if block.settings.featured_product_heading != blank -%}
                  {%- capture content_class -%}{{ block.settings.fdesktop_text_position }} collection-featured-product__title text-xs bold{%- endcapture -%}
                  <p {% render 'surface', class: content_class, background: block.settings.fbg_color %}>{{ block.settings.featured_product_heading | escape }}</p>
                {%- endif -%}
                {%- capture content_class -%}collection-featured-product__content{%- endcapture -%}
                <a {% render 'surface', class: content_class, background: block.settings.fbg_color %} href="{{ block.settings.featured_product.url }}">
                  {%- render 'horizontal-product', product: block.settings.featured_product, size: 'sm', output_link: false -%}
                </a>
              </div>
              </div>
               </div>
            {% else %}
            {%- capture content_class -%}{{ block.settings.fdesktop_text_position }} collection-featured-product__title text-xs bold hidden md:block{%- endcapture -%}
            <div {% render 'surface', class: content_class, text_color: block.settings.ftext_color %}>
              <div class="collection-featured-product">
                {%- if block.settings.featured_product_heading != blank -%}
                  {%- capture content_class -%}{{ block.settings.fdesktop_text_position }} collection-featured-product__title text-xs bold{%- endcapture -%}
                  <p {% render 'surface', class: content_class, background: block.settings.fbg_color %}>{{ block.settings.featured_product_heading | escape }}</p>
                {%- endif -%}
                {%- capture content_class -%}collection-featured-product__content{%- endcapture -%}
                <a {% render 'surface', class: content_class, background: block.settings.fbg_color %} href="{{ block.settings.featured_product.url }}">
                  {%- render 'horizontal-product', product: block.settings.featured_product, size: 'sm', output_link: false -%}
                </a>
              </div>
            </div>
          {%- endif -%}    
          {%- endif -%}
          {%- capture content_class -%}{{ block.settings.mobile_text_position }} {{ block.settings.desktop_text_position }}{%- endcapture -%}

          <div {% render 'surface', class: content_class, text_color: block.settings.text_color %}>
            <div class="prose">
              {%- if block.settings.preheading_img != blank -%}
                <div style="--margin-top: {{ block.settings.pre_margin }}px;">
                {%- if block.settings.pre_link != blank -%}<a href="{{ block.settings.pre_link }}">{%- endif -%}
                {{- block.settings.preheading_img | image_url: width: block.settings.pre_max_width | image_tag: loading: loading_strategy, fetchpriority: fetch_priority, sizes: sizes, widths: '200,300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200' -}}
                {%- if block.settings.pre_link != blank -%}</a>{%- endif -%}
                </div>
              {%- else -%}
                {%- if block.settings.pre_link != blank -%}<a href="{{ block.settings.pre_link }}">{%- endif -%}
                <h4 class="slide_text" data-sequence="preheading" style="--margin-top: {{ block.settings.pre_margin }}px;">
                    {%- render 'styled-text', content: block.settings.preheading, font_size: block.settings.font_size_pre, gradient: block.settings.pre_gradient, apparition_effect: true -%}
                </h4>
                {%- if block.settings.pre_link != blank -%}</a>{%- endif -%} 
              {%- endif -%}
              {%- if block.settings.title_img != blank -%}
                <div style="--margin-top: {{ block.settings.head_margin }}px;">
                {%- if block.settings.title_link != blank -%}<a href="{{ block.settings.title_link }}">{%- endif -%}
                {{- block.settings.title_img | image_url: width: block.settings.title_max_width | image_tag: loading: loading_strategy, fetchpriority: fetch_priority, sizes: sizes, widths: '200,300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200' -}}
                {%- if block.settings.title_link != blank -%}</a>{%- endif -%}
                </div>
              {%- else -%}
                {%- if block.settings.title_link != blank -%}<a href="{{ block.settings.title_link }}">{%- endif -%}
                  <h4 class="slide_text" data-sequence="heading" style="--margin-top: {{ block.settings.head_margin }}px;">
                      {%- render 'styled-text', content: block.settings.title, font_size: block.settings.font_size_title, gradient: block.settings.heading_gradient, apparition_effect: true -%}
                  </h4>
                  {%- if block.settings.title_link != blank -%}</a>{%- endif -%}
              {%- endif -%}
              {%- if block.settings.subheading_img != blank -%}
                <div style="--margin-top: {{ block.settings.head_margin }}px;">
                {%- if block.settings.subheading_link != blank -%}<a href="{{ block.settings.subheading_link }}">{%- endif -%}
                {{- block.settings.subheading_img | image_url: width: block.settings.sub_max_width | image_tag: loading: loading_strategy, fetchpriority: fetch_priority, sizes: sizes, widths: '200,300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200' -}}
                {%- if block.settings.subheading_link != blank -%}</a>{%- endif -%}
                </div>
              {%- else -%}
                {%- if block.settings.subheading_link != blank -%}<a href="{{ block.settings.subheading_link }}">{%- endif -%}
                <h4 class="slide_text" data-sequence="subheading" style="--margin-top: {{ block.settings.sub_margin }}px;">
                    {%- render 'styled-text', content: block.settings.subheading, font_size: block.settings.font_size_sub, gradient: block.settings.sub_gradient, apparition_effect: true -%}
                </h4>  
                {%- if block.settings.subheading_link != blank -%}</a>{%- endif -%}
              {%- endif -%}
              {%- if block.settings.button_text != blank -%}
                {%- render 'button', href: block.settings.button_link, content: block.settings.button_text, size: block.settings.button_size, style: block.settings.btn_style, background: block.settings.button_background, text_color: block.settings.button_text_color -%}
              {%- endif -%}
              {%- if block.settings.button_link2 != blank -%}
                {%- render 'button', href: block.settings.button_link2, content: block.settings.button_text2, size: block.settings.button_size, style: block.settings.btn_style, background: block.settings.button_background, text_color: block.settings.button_text_color -%}
              {%- endif -%}
              {%- if block.settings.button_link3 != blank -%}
                {%- render 'button', href: block.settings.button_link3, content: block.settings.button_text3, size: block.settings.button_size, style: block.settings.btn_style, background: block.settings.button_background, text_color: block.settings.button_text_color -%}
              {%- endif -%}
              {%- if block.settings.button_link4 != blank -%}
                {%- render 'button', href: block.settings.button_link4, content: block.settings.button_text4, size: block.settings.button_size, style: block.settings.btn_style, background: block.settings.button_background, text_color: block.settings.button_text_color -%}
              {%- endif -%}
            </div>
          </div>
        </div>
      {%- endcapture -%}

      {%- if block.settings.button_link != blank and block.settings.button_text == blank -%}
        <a
          id="block-{{ block.id }}"
          href="{{ block.settings.button_link }}"
          class="slideshow__slide {% if forloop.first %}is-selected{% endif %}"
          role="group"
          {{ block.shopify_attributes }}
        >
          {{- slide -}}
        </a>
      {%- else -%}
        <div
          id="block-{{ block.id }}"
          class="slideshow__slide {% if forloop.first %}is-selected{% endif %}"
          role="group"
          {{ block.shopify_attributes }}
        >
          {{- slide -}}
        </div>
      {%- endif -%}
    {%- endfor -%}

    {%- if section.blocks.size > 1 and section.settings.controls_type != 'none' -%}
      <div class="slideshow__controls {{ section.settings.controls_pos }}">
        {%- case section.settings.controls_type -%}
          {%- when 'filled_arrows', 'outline_arrows' -%}
            <div class="prev-next-buttons">
              <button
                is="prev-button"
                aria-controls="{{ slideshow_id }}"
                class="circle-button circle-button--lg {% if section.settings.controls_type == 'filled_arrows' %}circle-button--fill{% else %}circle-button--bordered{% endif %} group"
              >
                <span class="sr-only">{{ 'general.accessibility.previous' | t }}</span>
                <span class="animated-arrow animated-arrow--reverse"></span>
              </button>

              <button
                is="next-button"
                aria-controls="{{ slideshow_id }}"
                class="circle-button circle-button--lg {% if section.settings.controls_type == 'filled_arrows' %}circle-button--fill{% else %}circle-button--bordered{% endif %} group"
              >
                <span class="sr-only">{{ 'general.accessibility.next' | t }}</span>
                <span class="animated-arrow"></span>
              </button>
            </div>

          {%- when 'numbers' -%}
            <page-dots class="numbered-dots" aria-controls="{{ slideshow_id }}">
              {%- for i in (1..section.blocks.size) -%}
                <button
                  type="button"
                  class="numbered-dots__item"
                  aria-current="{% if forloop.first %}true{% else %}false{% endif %}"
                >
                  <svg
                    width="100%"
                    height="100%"
                    {% if section.settings.autoplay %}
                      style="--percent: 0"
                    {% endif %}
                  >
                    <circle cx="50%" cy="50%" r="15"></circle>
                    <circle cx="50%" cy="50%" r="15"></circle>
                  </svg>

                  <span>{{- forloop.index -}}</span>
                </button>
              {%- endfor -%}
            </page-dots>

          {%- when 'dots' -%}
            <div class="in_line_buttons">
              <button is="prev-button" aria-controls="{{ slideshow_id }}" class="circle-button circle-button--lg group">
                <span class="sr-only">{{ 'general.accessibility.previous' | t }}</span>
                <span class="animated-arrow animated-arrow--reverse"></span>
              </button>
              <page-dots class="stretching-dots" aria-controls="{{ slideshow_id }}">
                {%- for i in (1..section.blocks.size) -%}
                  <button
                    type="button"
                    class="tap-area"
                    aria-current="{% if forloop.first %}true{% else %}false{% endif %}"
                  >
                    <span class="sr-only">{{ 'general.accessibility.go_to_item' | t: index: forloop.index }}</span>
                  </button>
                {%- endfor -%}
              </page-dots>
              <button is="next-button" aria-controls="{{ slideshow_id }}" class="circle-button circle-button--lg group">
                <span class="sr-only">{{ 'general.accessibility.next' | t }}</span>
                <span class="animated-arrow"></span>
              </button>
            </div>
        {%- endcase -%}
      </div>
    {%- endif -%}
  </slideshow-carousel>
</x-slideshow>

{% schema %}
{
  "name": "Slideshow",
  "class": "shopify-section--slideshow",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "custom.overlay"]
  },
  "max_blocks": 5,
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "allow_transparent_header",
      "label": "Allow transparent header",
      "info": "This setting only applies when this section is the first one.",
      "default": true
    },
    {
      "type": "select",
      "id": "image_size",
      "label": "Image size",
      "options": [
        {
          "value": "auto",
          "label": "Original image ratio"
        },
        {
          "value": "sm",
          "label": "Small"
        },
        {
          "value": "md",
          "label": "Medium"
        },
        {
          "value": "lg",
          "label": "Large"
        },
        {
          "value": "fill",
          "label": "Fill screen height"
        }
      ],
      "info": "Choose \"Original image ratio\" to not cut images. [Learn more](https://help.shopify.com/en/manual/online-store/images/theme-images#best-practices-for-slideshows-and-full-width-images)",
      "default": "auto"
    },
    {
      "type": "select",
      "id": "controls_type",
      "label": "Controls",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "filled_arrows",
          "label": "Filled arrows"
        },
        {
          "value": "outline_arrows",
          "label": "Outline arrows"
        },
        {
          "value": "numbers",
          "label": "Numbers"
        },
        {
          "value": "dots",
          "label": "Dots"
        }
      ],
      "default": "dots"
    },
    {
      "type": "select",
      "id": "controls_pos",
      "label": "Controls Position",
      "options": [
        {
          "value": "bottom_right",
          "label": "Bottom Right"
        },
        {
          "value": "bottom_center",
          "label": "Bottom Center"
        },
        {
          "value": "bottom_left",
          "label": "Bottom Left"
